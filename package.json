{
  "name": "homematicip-local-schedule-card",
  "version": "0.1.0",
  "description": "Custom Lovelace card for Homematic schedules (switch, valve, cover, light, lock) - HACS compatible",
  "main": "dist/homematicip-local-schedule-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "serve": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"*.{json,md}\"",
    "validate": "npm run lint && npm run type-check && npm test && npm run build",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "homeassistant",
    "lovelace",
    "custom-card",
    "homematic",
    "schedule",
    "switch",
    "valve",
    "cover",
    "light",
    "lock",
    "hacs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SukramJ/homematicip_local_schedule_card.git"
  },
  "bugs": {
    "url": "https://github.com/SukramJ/homematicip_local_schedule_card/issues"
  },
  "homepage": "https://github.com/SukramJ/homematicip_local_schedule_card#readme",
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.0.0",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.39.1",
    "husky": "^9.0.0",
    "jest": "^30.2.0",
    "jest-cli": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.1.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.16.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{ts,js,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "test-exclude": "^7.0.1"
  }
}
